@page
@model FUNewsManagement.Pages.EditCategoryModel
@{
    ViewData["Title"] = "Edit Category";
}

<div class="container mt-4">
    <h3 class="mb-3">Edit Category</h3>

    <form method="post">
        <input type="hidden" asp-for="SelectedCategory.CategoryId" />

        <div class="mb-3">
            <label class="form-label">Category Name</label>
            <input asp-for="SelectedCategory.CategoryName" class="form-control" required />
        </div>

        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea asp-for="SelectedCategory.CategoryDesciption" class="form-control" required></textarea>
        </div>

        <div class="mb-3">
            <label class="form-label">Active</label>
            <select asp-for="SelectedCategory.IsActive" class="form-control">
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
        <a asp-page="Staff" class="btn btn-secondary">Cancel</a>
    </form>
</div>
